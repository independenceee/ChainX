{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "package": ["./package.json"],
      "@/contracts/*": ["contracts/*"],
      "@/api/*": ["api/*"]
    }
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}
